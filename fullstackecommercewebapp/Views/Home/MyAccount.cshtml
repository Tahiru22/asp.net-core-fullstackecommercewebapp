@model fullstackecommercewebapp.ViewModels.MyAccountViewModel

@{
    ViewData["Title"] = "My Account Information";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>E-Commerce</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">

    <link rel="stylesheet" href="~/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/css/animate.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <link rel="stylesheet" href="~/css/aos.css">

    <link rel="stylesheet" href="~/css/ionicons.min.css">

    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/icomoon.css">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="~/js/sweetalert2.js"></script>
    @{
        if (ViewBag.msg == "edited")
        {
            <script>
                Swal.fire({
                    icon: 'success',
                    title: 'Your Account Information has been updated successfully',
                    showConfirmButton: false,
                    timer: 1500
                })
            </script>
        }
        if (ViewBag.message == "PasswordUpdated")
        {
            <script>
                Swal.fire({
                    icon: 'success',
                    title: 'Your Password has been updated successfully',
                    showConfirmButton: false,
                    timer: 1500
                })
            </script>
        }
    }
</head>


<body class="goto-here">
    <div class="hero-wrap hero-bread" style="background-color: #dbcc8f;">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <p class="breadcrumbs"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home</a></span> <span>Users</span></p>
                    <h1 class="mb-0 bread">User Details</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-5 ftco-animate" style="height:500px">
                    @{
                        if (String.IsNullOrEmpty(Model.Image))
                        {
                            <a href="~/images/general_user.jpg" class="image-popup prod-img-bg"><img style="height:500px" src="~/images/general_user.jpg" class="img-fluid" alt="Colorlib Template"></a>
                        }
                        else
                        {
                            <a href="~/images/@Model.Image" class="image-popup prod-img-bg"><img style="height:500px" src="~/images/@Model.Image" class="img-fluid" alt="Colorlib Template"></a>
                        }
                    }

                </div>
                <div class="p-4" style="height:500px">
                    <div>
                        <b>
                            First Name:
                        </b>
                        @Html.DisplayFor(model => model.FirstName)
                    </div>
                    <div>
                        <b>
                            Last Name:
                        </b>
                        @Html.DisplayFor(model => model.LastName)
                    </div>
                    <div>
                        <b>
                            Gender:
                        </b>
                        @{
                            if (Model.Gendre == "m")
                            {
                                <span> Male </span>
                            }
                            else if (Model.Gendre == "f")
                            {
                                <span> Female </span>
                            }
                            else
                            {
                                <span> Not Specified </span>
                            }
                        }
                    </div>
                    <div>
                        <b>
                            Enrollment Date:
                        </b>
                            @ViewBag.CreatedAt
                    </div>
                    <br />
                    <br />
                    <div>
                        <b>
                            <a asp-action="EditMyAccount" asp-controller="Home"> Edit My Account Information </a>
                        </b>
                    </div>
                    <div>
                        <b>
                            <a id="change-password" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Change My Password</a>
                        </b>
                    </div>
                </div>

            </div>

            <div class="row mt-5">
                <div class="col-md-12 nav-link-wrap">
                    <div class="nav nav-pills d-flex text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link ftco-animate active mr-lg-1" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab" aria-controls="v-pills-1" aria-selected="true">My Persoal Information</a>

                        <a class="nav-link ftco-animate mr-lg-1" id="v-pills-2-tab" data-toggle="pill" href="#v-pills-2" role="tab" aria-controls="v-pills-2" aria-selected="false">Contact Information</a>

                        <a class="nav-link ftco-animate" id="v-pills-3-tab" data-toggle="pill" href="#v-pills-3" role="tab" aria-controls="v-pills-3" aria-selected="false">Edit My Profile</a>

                    </div>
                </div>

                <div class="col-md-12 tab-wrap">

                    <div class="tab-content bg-light" id="v-pills-tabContent">

                        <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="day-1-tab">
                            <div class="p-4">
                                <div>
                                    <b>
                                        Name:
                                    </b>
                                    @string.Concat(Model.FirstName, string.Concat(" ", Model.LastName))
                                </div>
                                <div>
                                    <b>
                                        Gender:
                                    </b>
                                    @{
                                        if (Model.Gendre == "m")
                                        {
                                            <span> Male </span>
                                        }
                                        else if (Model.Gendre == "f")
                                        {
                                            <span> Female </span>
                                        }
                                        else
                                        {
                                            <span> Not Specified </span>
                                        }
                                    }
                                </div>
                                <div>
                                    <b>
                                        Enrollment Date:
                                    </b>
                                    @ViewBag.CreatedAt
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="v-pills-2" role="tabpanel" aria-labelledby="v-pills-day-2-tab">
                            <div class="p-4">
                                <div>
                                    <b>
                                        User Email:

                                    </b>
                                    @ViewBag.Email
                                </div>
                                <div>
                                    <b>
                                        Address:
                                    </b>
                                    @Html.DisplayFor(model => model.Address)
                                </div>
                                <div>
                                    <b>
                                        Phone:
                                    </b>
                                    @Html.DisplayFor(model => model.Phone)
                                </div>
                            </div>
                            
                        </div>
                        <div class="tab-pane fade" id="v-pills-3" role="tabpanel" aria-labelledby="v-pills-day-3-tab">
                            <div class="p-4">
                                <div>
                                    <b>
                                        <a asp-action="EditMyAccount" asp-controller="Home"> Edit My Account Information </a>
                                    </b>
                                    
                                </div>
                                <div>
                                    <b>
                                        <a id="change-password" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Change My Password</a>
                                    </b>
                                    
                                </div>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </section>





    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/js/google-map.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>