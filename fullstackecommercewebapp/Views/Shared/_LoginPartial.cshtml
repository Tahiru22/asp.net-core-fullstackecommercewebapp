@using Microsoft.AspNetCore.Identity
@using fullstackecommercewebapp.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<script>
    function myFunc() {
        document.getElementById("myForm").submit();
    }
</script>

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Home" asp-action="MyAccount" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form id="myForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" , method="post">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="#" onclick="myFunc()" class="nav-link">Logout</a>
                </li>
            </ul>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="Identity" class="nav-link" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a asp-area="Identity" class="nav-link" asp-page="/Account/Login">Login</a>
    </li>
}

