        .validation-summary-errors ul {
            list-style: none;
        }
    </style>
</head>

<body class="goto-here">
    <div class="hero-wrap hero-bread" style="background-color: #dbcc8f; height:20px">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Add</span></p>
                    <h1 class="mb-0 bread">Edit Product</h1>
                    <div asp-validation-summary="All" class="text-danger"> </div>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 ftco-animate">
                    <form asp-action="EditAttributes" method="post" enctype="multipart/form-data">
                        <div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.Name)
                                <input class="form-control" value="@Model.Name" asp-for="Name" /> <span asp-validation-for="Name" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.Sku)
                                <input class="form-control" value="@Model.Sku" asp-for="Sku" /> <span asp-validation-for="Sku" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.Price)
                                <input class="form-control" value="@Model.Price" asp-for="Price" /> <span asp-validation-for="Price" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.CompanyName)
                                <input class="form-control" value="@Model.CompanyName" asp-for="CompanyName" /> <span asp-validation-for="CompanyName" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.Image1)
                                <input class="form-control-file" name="Image1" id="Image1" value="@Model.Image1" type="file" /> <span asp-validation-for="Image1" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.Description)
                                <textarea class="form-control" value="@Model.Description" asp-for="Description"> </textarea> <span asp-validation-for="Description" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <select class="form-control" name="CategoryId">
                                    <option name="CategoryId" disabled value="0">
                                        Choose Category
                                    </option>
                                    @foreach (var item in Model.Categories)
                                    {
                                        if (item.Id == Model.CategoryId)
                                        {
                                            <option name="CategoryId" value="@item.Id" selected> @item.Name </option>
                                        }
                                        else
                                        {
                                            <option name="CategoryId" value="@item.Id">
                                                @item.Name
                                            </option>
                                        }
                                    }
                                </select>  <span asp-validation-for="CategoryId" class="text-danger"> </span>
                            </div>
                            <input name="previousCategoryId" type="hidden" value="@ViewBag.CategoryId" />
                            <input type="hidden" value=@ViewBag.id name="id" />
                            <input type="hidden" value=@Model.Image1 name="prod_img" />
                            <button type="submit" class="btn btn-primary py-3 px-5"> Edit Attributes </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-1 order-md-last d-flex"> </div>
    </section>


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
